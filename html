<body>
    <h1>Крестики-Нолики</h1>
    <div class="scoreboard" id="scoreboard">
        Игрок X: 0 | Игрок O: 0 | Ничьи: 0
    </div>
    <div class="board" id="board"></div>
    <div class="controls">
        <button id="reset">Сбросить игру</button>
        <a href="documentation.pdf" target="_blank">Документация</a>
    </div>

    <script>
        const boardElement = document.getElementById('board');
        const resetButton = document.getElementById('reset');
        const scoreboardElement = document.getElementById('scoreboard');
        let board = Array(9).fill(null);
        let currentPlayer = 'X';
        let gameActive = true;
        let scores = { X: 0, O: 0, draws: 0 };

        function drawBoard() {
            boardElement.innerHTML = '';
            board.forEach((value, index) => {
                const cell = document.createElement('div');
                cell.classList.add('cell');
                if (value) {
                    cell.textContent = value;
                    cell.classList.add('taken');
                }
                cell.addEventListener('click', () => handleMove(index));
                boardElement.appendChild(cell);
            });
        }

        function handleMove(index) {
            if (!gameActive || board[index]) return;

            board[index] = currentPlayer;
            checkWinner();

            if (currentPlayer == 'X') {
                currentPlayer = 'O';
            } else {
                currentPlayer = 'X';
            }
            
            drawBoard();
        }

        function checkWinner() {
            const winPatterns = [
                [0, 1, 2], [3, 4, 5], [6, 7, 8], [0, 3, 6], [1, 4, 7], [2, 5, 8], [0, 4, 8], [2, 4, 6] 
                ];

            for (const pattern of winPatterns) {
                const [a, b, c] = pattern;
                if (board[a] && board[a] == board[b] && board[a] == board[c]) {
                    console.log('Игрок ' + board[a] + ' выиграл');
                    alert('Игрок ' + board[a] + ' выиграл');
                    scores[board[a]]++;
                    gameActive = false;
                    updateScoreboard();
                    return;
                }
            }

            if (!board.includes(null)) {
                alert('Ничья!');
                console.log('Ничья!');
                scores.draws++;     
                updateScoreboard();
                gameActive = false;
            }
        }

        function resetGame() {
            board = Array(9).fill(null);
            currentPlayer = 'X';
            gameActive = true;
            drawBoard();
        }
        function updateScoreboard() {
            scoreboardElement.textContent = 'Игрок X: ' + scores.X + ' | Игрок O: ' + scores.O  +' | Ничьи: ' + scores.draws;
        }
        resetButton.addEventListener('click', resetGame);
        drawBoard();
    </script>
</body>
